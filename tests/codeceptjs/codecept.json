{
  "tests": "./**/*_test.js",
  "timeout": 10000,
  "output": "./output",
  "plugins": {
    "pauseOnFail": {}
  },
  "helpers": {
    "WebDriver": {
      "url": "http://node:9001/tests/pages/",
      "browser": "firefox",
      "restart": false,
      "host": "firefox",
      "smartWait": 10000
    },
    "customHelpers": {
      "require": "./../../config/codeceptjs_helpers.js"
    }
  },
  "include": {
    "I": "./steps_file.js"
  },
  "bootstrap": false,
  "mocha": {},
  "name": "codeceptjs",
  "multiple": {
    "parallel": {
      "chunks": 2
    },
    "basic": {
      "browsers": [
        "firefox",
        {
          "url": "http://node:9001/tests/pages/",
          "browser": "chrome",
          "host": "chrome",
          "restart": false
        }
      ]
    }
  }
}
